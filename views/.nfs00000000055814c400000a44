	<div class="large-1 columns">
		<form class="pure-form" method="post">
			<fieldset class="pure-group">
				<input type="text" class="pure-input-1" name="title" placeholder="Task title" />

				<textarea name="description" class="pure-input-1" placeholder="Describe what tasks you..."></textarea>
			</fieldset>
			<button class="pure-button pure-input-1 pure-button-primary" action="/" type="submit" />
				This tasks me...
			</button>
		</form>
	</div>
</div>
<div class="row" id="current_tasks">
	<div class="row">
		<div class="large-1 columns">
			<h1>This... THIS is what Tasks me</h1>
		</div>
	</div>
	<% @tasks.each do | task |%>
		<% if task.finished.nil? || task.finished == false %>
			<div class="large-3 columns">
				<div class="single-task" data-task-id="<%= task.id %>">
					<h2><%= task.title %></h2>
					<p><%= task.description %></p>

					<form class="pure-form single-task-form" data-task-id="<%= task.id %>">
						<label for="finished" class="pure-radio" >
							<small>Eternally...</small>
						</label>
						<input class="pure-button-error" type="radio" name="finished" value="false" <% if task.finished == false %> checked="checked" <% end %> />

						<label for="finished" class="pure-radio">
							<small>NAY</small>
						</label>
						<input type="radio" class="pure-button-success" name="finished" value="true" <% if task.finished == true %> checked="checked" <% end %>/>
					</form>

					<small><em>created at: <%= task.created_at.strftime('%I:%M%p %m.%d.%Y') %></em></small>
				</div>
			</div>
		<% end %>
	<% end %>
</div>
<div class="row" id="completed_tasks">
	<div class="row">
		<div class="large-1 columns">
		<h1>This tasks me no longer</h1>
		</div>
	</div>
	<div class="row">
	<% @tasks.each do | task |%>
		<% if task.finished == true %>
			<div class="large-3 columns">
				<div class="single-task" data-task-id="<%= task.id %>">
					<h2><%= task.title %></h2>
					<p><%= task.description %></p>

					<form class="pure-form single-task-form" data-task-id="<%= task.id %>">

						<label for="finished" class="pure-radio" >
							<small>Eternally...</small>
						</label>
						<input class="pure-button-error" type="radio" name="finished" value="false" <% if task.finished == false %> checked="checked" <% end %> />

						<label for="finished" class="pure-radio">
							<small>NAY</small>
						</label>
						<input type="radio" class="pure-button-success" name="finished" value="true" <% if task.finished == true %> checked="checked" <% end %>/>
					</form>

					<small><em>created at: <%= task.created_at.strftime('%I:%M%p %m.%d.%Y') %></em></small>
					<br />
					<small><em>finished at: <%= if !task.finished_at.nil? then task.finished_at.strftime('%I:%M%p %m.%d.%Y') end %></em></small>
				</div>
			</div>
		<% end %>
	<% end %>
	</div>
</div>