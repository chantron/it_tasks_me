<div class="pure-g-r">
	<div class="pure-u-1">
		<h1 class="task-title">What tasks you?</h1>
	</div>
</div>
<div class="pure-g-r">
	<div class="pure-u-1">
		<form class="pure-form" method="post">
			<fieldset class="pure-group">
				<input type="text" class="pure-input-1" name="title" placeholder="Task title" />

				<textarea name="description" class="pure-input-1" placeholder="Describe what tasks you..."></textarea>
			</fieldset>
			<button class="pure-button pure-input-1 pure-button-primary" action="/" type="submit" />
				This tasks me...
			</button>
		</form>
	</div>
</div>
<div class="pure-g-r">
	<div class="pure-u-1">
		
	</div>
	<% @tasks.each do | task |%>
		<div class="pure-u-1-3">
			<div class="single-task">
				<h2><%= task.title %></h2>
				<p><%= task.description %></p>
				<form class="pure-form">
					<label for="finished" class="pure-checkbox" >
						<small>Does is task you further? <input type="checkbox" name="finished" /></small>
					</label>
				</form>
			</div>
		</div>
	<% end %>
	
</div>